<h1>Home Page</h1>

<% if current_user %>
    <p>Hello <%= current_user.username %>!</p>
    <% if !current_user.agreement.nil? %>
        <p>You are a <%= current_user.agreement.role %></p>
    <% end %>

    <h2>Navigation Button</h2>
    <%= link_to 'Profile page', current_user %>
    <br>
    
    <% if !current_user.company.nil? %>
        <%= link_to 'Company page', current_user.company %>
    <% else %>
        <p>You are not signed to any company</p>
    <% end %>
    <br>
    <%= link_to 'Sign out', destroy_user_session_path, 'data-turbo-method': :delete %>
    
    <h2>Attendance button</h2>
    <a class="button">
        <button>Attend</button>
    </a>
    <a class="button">
        <button>Leaving</button>
    </a>
    <br>

    <% if current_user.agreement.HR? %>
        <h2>Unsinged User</h2>
        <ul>
            <% @users.each do |user| %>
            <li>
                <% if user.agreement.nil? %>
                    <%= link_to user.username, user %>   
                <% end %>
            </li>
            <% end %>
        </ul>
    <% end %>
    

<% else %>
    <p>You are not signed in.</p>
    <%= link_to 'Sign Up', new_user_registration_path %>
    <br/>
    <%= link_to 'Login', new_user_session_path %>
<% end %>
